<% include ../partials/header %>
<div class="container">
	<h1 class="form-header gray-text">Add New Comment to <%= movie.title%> </h1>	
	<div class="form-div">
		<form method="POST" action="/movies/<%= movie._id%>/comments">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="text">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="comment[author]" placeholder="author">

			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
			</div>
			<a href="/movies">Back to All Movies</a>
		</form>
	</div>
</div>

<% include ../partials/footer %>