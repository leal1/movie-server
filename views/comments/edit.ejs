<% include ../partials/header %>
<div class="container">
	<h1 class="form-header gray-text">Edit Comment Form</h1>	
	<div class="form-div">
		<form  action="/movies/<%= movie_id %>/comments/<%= comment._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" value="<%= comment.text%>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="comment[author]" value="<%= comment.author%>">

			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
			</div>
			<a href="/movies">Back to All Movies</a>
		</form>
	</div>
</div>

<% include ../partials/footer %>