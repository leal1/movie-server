<% include ../partials/header %>
<div class="container">
	<h1 class="form-header gray-text">Edit <%= movie.title %></h1>
	<div class="form-div">
		<form action="/movies/<%= movie._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name = "movie[title]" value="<%= movie.title%>" >
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name = "movie[image]" value="<%= movie.image%>" >
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name = "movie[description]" value="<%= movie.description%>" >
			</div>
			<button class="btn btn-lg btn-primary btn-block">Submit</button>
		</form>
		<a href="/movies/<%= movie._id %>"> Back to <%= movie.title%></a>
	</div>
</div>

<% include ../partials/footer %>